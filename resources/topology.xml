<network xmlns="urn:ietf:params:xml:ns:yang:ietf-network"
         xmlns:tapi="urn:onf:params:xml:ns:yang:TapiTopology"
         xmlns:lnk="urn:ietf:params:xml:ns:yang:ietf-network-topology">
  <network-id>tapi-topology</network-id>
  <node>
    <node-id>node-a</node-id>
    <lnk:termination-point>
      <lnk:tp-id>GigabitEthernet0/0/1/0</lnk:tp-id>
    </lnk:termination-point>
  </node>
  <node>
    <node-id>node-z</node-id>
    <lnk:termination-point>
      <lnk:tp-id>GigabitEthernet0/0/1/1</lnk:tp-id>
    </lnk:termination-point>
  </node>
  <lnk:link>
    <lnk:link-id>node-a:node-z</lnk:link-id>
    <lnk:source>
      <lnk:source-node>node-a</lnk:source-node>
      <lnk:source-tp>GigabitEthernet0/0/1/0</lnk:source-tp>
      <tapi:role>symmetric</tapi:role>
    </lnk:source>
    <lnk:destination>
      <lnk:dest-node>node-z</lnk:dest-node>
      <lnk:dest-tp>GigabitEthernet0/0/1/1</lnk:dest-tp>
      <tapi:role>symmetric</tapi:role>
    </lnk:destination>
    <tapi:transfer-capacity>
      <tapi:available-capacity>
        <tapi:total-size>1000</tapi:total-size>
      </tapi:available-capacity>
    </tapi:transfer-capacity>
    <tapi:layer-protocol-name>eth</tapi:layer-protocol-name>
    <tapi:direction>bidirectional</tapi:direction>
  </lnk:link>
</network>
